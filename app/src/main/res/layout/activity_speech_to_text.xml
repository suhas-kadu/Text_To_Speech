<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Speech To Text"
            android:textColor="@color/black"
            android:textSize="25dp" />


        <TextView
            android:layout_below="@+id/stt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stt_Text"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:padding="30dp"
            android:textColor="@color/black"
            android:text="Speak_something"
            android:textSize="20dp" />


        <ImageView
            android:layout_below="@+id/stt_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/voice"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:onClick="getSpeechInput"
            android:src="@drawable/ic_mic_green"
            tools:ignore="OnClick"
            />

        <Switch
            android:layout_below="@+id/voice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch_stt"
            android:layout_centerInParent="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="50dp"
            android:padding="20dp"
            android:switchMinWidth="50dp"
            android:switchPadding="4dp"
            android:text="Switch to Text to Speech"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </RelativeLayout>

</ScrollView>